<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Homepage</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-3">
            <% if (blogs && blogs.length) { %>
                <div class="row">
                    <% blogs.forEach(function(ele) { %>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <% if (ele.coverImageUrl) { %>
                                    <img src="<%= ele.coverImageUrl %>" class="card-img-top" alt="Cover Image"
                                        style="max-width: 100%; height: 200px; object-fit: cover;">
                                    <% } %>
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title">
                                                <%= ele.title %>
                                            </h5>
                                            <p class="card-text">
                                                <%= ele.body %>
                                            </p>
                                            <small class="text-muted mb-2">Created at: <%= ele.createdAt.toLocaleString
                                                    ? ele.createdAt.toLocaleString() : ele.createdAt %></small>
                                            <div class="mt-auto">
                                                <span style="cursor:pointer; color:#e25555; font-size:1.5rem;"
                                                    title="Like">&#10084;</span>

                                            </div>
                                        </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <h1>No blogs found.</h1>
                    <% } %>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>